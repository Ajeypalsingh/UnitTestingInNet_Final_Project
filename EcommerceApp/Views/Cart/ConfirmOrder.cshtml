@model EcommerceApp.Models.ViewModel.ConfirmOrderVM

<h2>Confirm Order</h2>

<p>Price of All Items:<b>@Model.PriceOfAllItems</b> </p>
<p>Converted Price: <b>@Model.ConvertedPrice</b></p>
<p>Total Price (with tax): <b>@Model.TotalPriceWithTax</b></p>

<h3>Shipping Information</h3>
<form method="post" asp-action="CreateOrder">
    <input type="hidden" asp-for="CountryId" />
    <input type="hidden" asp-for="CountryName" />
    <input type="hidden" asp-for="PriceOfAllItems" />
    <input type="hidden" asp-for="ConvertedPrice" />
    <input type="hidden" asp-for="TotalPriceWithTax" />
    <input type="hidden" asp-for="NumberOfItems" />

    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label for="MailingCode">Mailing Code:</label>
        <input type="text" asp-for="MailingCode" class="form-control mb-2" />
    </div>

    <button type="submit" class="btn btn-success ">Submit Order</button>
</form>

