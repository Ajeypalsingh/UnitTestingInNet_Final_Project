@model ICollection<Product>



<div>
    <form asp-action="SearchProducts" method="get">
        <div class="input-group mb-3">
            <input type="text" class="form-control me-4" name="searchQuery" placeholder="Search for products...">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit">Search</button>
                <a asp-action="Index" class="btn btn-primary">Show All</a>

            </div>
        </div>
    </form>
</div>

    
@foreach (Product p in Model)
{
    <div class="card mb-2">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@p.ProductName</h3>
            <div>
                <a asp-action="AddToCart" asp-route-productId="@p.ProductId" class="btn btn-primary">Add To Cart</a>
            </div>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Availabe Stock</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@p.ProductDescription</td>
                        <td>@p.PriceInCAD</td>
                        <td>@p.AvailableQuantity</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
}